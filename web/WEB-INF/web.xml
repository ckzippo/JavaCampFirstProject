<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>registerUser</servlet-name>
        <servlet-class>servlet.registerUserServ</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlet.loginServ</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>addUser</servlet-name>
        <servlet-class>servlet.addUserServ</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>modUser</servlet-name>
        <servlet-class>servlet.modUserServ</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>delUser</servlet-name>
        <servlet-class>servlet.delUserServ</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>modComment</servlet-name>
        <servlet-class>servlet.modCommentServ</servlet-class>
    </servlet>

    <!--用户分页展示-->
    <servlet>
        <servlet-name>userPage</servlet-name>
        <servlet-class>servlet.userPageControlServ</servlet-class>
    </servlet>

    <!--留言分页展示-->
    <servlet>
        <servlet-name>commentPage</servlet-name>
        <servlet-class>servlet.commentPageControlServ</servlet-class>
    </servlet>

    <!--映射关系-->
    <servlet-mapping>
        <servlet-name>registerUser</servlet-name>
        <url-pattern>/html/registerUser</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/html/login</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>addUser</servlet-name>
        <url-pattern>/html/manage/addUser</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>modUser</servlet-name>
        <url-pattern>/html/manage/modUser</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>delUser</servlet-name>
        <url-pattern>/html/manage/delUser</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>modComment</servlet-name>
        <url-pattern>/html/manage/modComment</url-pattern>
    </servlet-mapping>

    <!--用户分页展示-->
    <servlet-mapping>
        <servlet-name>userPage</servlet-name>
        <url-pattern>/html/manage/userPage</url-pattern>
    </servlet-mapping>

    <!--留言分页展示-->
    <servlet-mapping>
        <servlet-name>commentPage</servlet-name>
        <url-pattern>/html/manage/commentPage</url-pattern>
    </servlet-mapping>
</web-app>